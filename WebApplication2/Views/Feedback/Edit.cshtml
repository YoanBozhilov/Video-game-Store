@model FeedbackDTO

<form asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Enter email" value="@Model.Email">
    </div>
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Enter name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label>Message</label>
        <input type="text" class="form-control" name="message" placeholder="Enter message" value="@Model.Message">
    </div>
    <button type="submit" class="btn btn-warning">Edit</button>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Cancel</button>
    </a>
</form>
