@model Game

<form asp-action="DeleteConfirm" asp-route-id="@Model.Id">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Enter name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label>Pic</label>
        <input type="text" class="form-control" name="pic" placeholder="Enter pic" value="@Model.Pic">
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="text" class="form-control" name="price" placeholder="Enter price" value="@Model.Price">
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control" name="description" placeholder="Enter description" value="@Model.Description">
    </div>
    <div class="form-group">
        <label>Link</label>
        <input type="text" class="form-control" name="link" placeholder="Enter link" value="@Model.Link">
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Cancel</button>
    </a>
</form>